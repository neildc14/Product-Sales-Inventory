<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/head')%>
  <body>
    <main>
      <div class="container-fluid mx-0 px-0">
        <%-include('./partials/nav')%>
        <div class="container sub_container">
          <button
            onclick="window.history.back()"
            class="btn border border-2 border-light d-flex align-items-center back_button"
          >
            <span class="material-symbols-outlined me-2"> arrow_back_ios </span>
            <span>Go Back</span>
          </button>
          <div class="my-4" style="max-width: 498px; margin: 0 auto">
            <h5>Add Product</h5>
            <form action="" method="POST">
                <div class="modal-body">
                    <div class="form-group pb-2">
                      <input
                        type="hidden"
                        name="weekly_product"
                        id="weekly_product"
                        value="<%=weekly_product_sales._id%>"
                      />
                    </div>
                    <div class="form-group pb-2">
                      <label for="product_name" class="pb-1"
                        >Product Name:</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        name="product_name"
                        id="product_name"
                        required="true"
                        autocomplete="off"
                        value="<%=product_reset !== undefined ? product_reset.product_name : ''%>"
                      />
                    </div>
                    <div class="form-group pb-2">
                      <label for="quantity" class="pb-1"
                        >Quantity(if limited):</label
                      >
                      <input
                        type="number"
                        class="form-control"
                        name="quantity"
                        id="quantity"
                        autocomplete="off"
                        value="<%=product_reset !== undefined ? product_reset.quantity : ''%>"
                      />
                    </div>
                    <div class="form-group pb-2">
                      <label for="quantity" class="pb-1">Original Price:</label>
                      <input
                        type="number"
                        class="form-control"
                        name="original_price"
                        id="original_price"
                        autocomplete="off"
                        value="<%=product_reset !== undefined ? product_reset.original_price : ''%>"
                        required
                      />
                    </div>
                    <div class="form-group pb-2">
                      <label for="quantity" class="pb-1"> Selling Price:</label>
                      <input
                        type="number"
                        class="form-control"
                        name="selling_price"
                        id="selling_price"
                        required="true"
                        autocomplete="off"
                        value="<%=product_reset !== undefined ? product_reset.selling_price : ''%>"
                      />
                    </div>
              <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">
                  Save Product
                </button>
                <button
                  type="reset"
                  class="btn back_button border border-2 bg-light border-light ms-2"
                >
                  Reset
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
    <%-include('./partials/scripts')%>
  </body>
</html>
