<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/head')%>
  <body>
    <main>
      <div class="container-fluid mx-0 px-0">
        <%-include('./partials/nav')%>
        <div class="container mt-3 px-4">
          <h5>Add Expenses</h5>

          <div class="my-4">
            <form action="" method="POST">
              <div class="form-group pb-2">
                <input
                  type="hidden"
                  name="weekly_product_misc"
                  id="weekly_product_misc"
                  value="<%=weekly_product_sales._id%>"
                />
              </div>
              <div class="form-group pb-2">
                <label for="misc_name" class="pb-1">Type:</label>
                <input
                  type="text"
                  class="form-control"
                  name="misc_name"
                  id="misc_name"
                  required="true"
                  autocomplete="off"
                />
              </div>
              <div class="form-group pb-2">
                <label for="amount" class="pb-1">Amount:</label>
                <input
                  type="text"
                  class="form-control"
                  name="amount"
                  id="amount"
                  required="true"
                  autocomplete="off"
                />
              </div>

              <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">
                  Save Product
                </button>
                <button onclick="history.back()" class="btn">Back</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
    <%-include('./partials/scripts')%>
  </body>
</html>
