<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/head')%>
  <body>
    <main>
      <div class="container-fluid mx-0 px-0">
        <%-include('./partials/nav')%>
        <div class="container sub_container">
          <button
            onclick="window.history.back()"
            class="btn border border-2 border-light d-flex align-items-center back_button"
          >
            <span class="material-symbols-outlined me-2"> arrow_back_ios </span>
            <span>Go Back</span>
          </button>
          <div class="my-4" style="max-width: 498px; margin: 0 auto">
            <h5>Add Expenses</h5>
            <form action="" method="POST">
              <div class="form-group pb-2">
                <input
                  type="hidden"
                  name="weekly_product_misc"
                  id="weekly_product_misc"
                  value="<%=weekly_product_sales._id%>"
                />
              </div>
              <div class="form-group pb-2">
                <label for="misc_name" class="pb-1">Type:</label>
                <input
                  type="text"
                  class="form-control"
                  name="misc_name"
                  id="misc_name"
                  required="true"
                  autocomplete="off"
                  value="<%=misc_reset !== undefined ? misc_reset.misc_name%>"
                />
              </div>
              <div class="form-group pb-2">
                <label for="amount" class="pb-1">Amount:</label>
                <input
                  type="text"
                  class="form-control"
                  name="amount"
                  id="amount"
                  required="true"
                  autocomplete="off"
                  value="<%=misc_reset !== undefined ? misc_reset.amount%>"
                />
              </div>

              <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">
                  Save Product
                </button>
                <button
                  type="reset"
                  class="btn back_button border border-2 bg-light border-light ms-2"
                >
                  Reset
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
    <%-include('./partials/scripts')%>
  </body>
</html>
