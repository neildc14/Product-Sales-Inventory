<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/head')%>
  <body>
    <main>
      <div class="container">
        <div class="text-center">
          <img src="/images/logo.png" alt="" class="user_logo" />
        </div>
        <div class="user_form border p-3">
          <h3 class="mb-3">Register Account</h3>
          <form
            action=""
            name="registerForm"
            method="POST"
            onsubmit="return matchPassword()"
          >
            <div class="form-group">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                class="form-control"
                name="username"
                id="username"
                required
              />
            </div>
            <div class="form-group my-4">
              <label for="initial_password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                id="initial_password"
                required
              />
              <div class="invalid-feedback">Password not matched.</div>
            </div>

            <div class="form-group my-4">
              <label for="validated_password" class="form-label"
                >Confirm Password</label
              >
              <input
                type="password"
                class="form-control"
                id="validated_password"
                name="validated_password"
                required
              />
              <div class="invalid-feedback">Password not matched.</div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            <br />
            <div class="mt-3 mx-auto d-flex">
              <p>Already have an account?</p>
              <a href="/user/login" class="px-1">Sign in</a>
            </div>
          </form>
        </div>
      </div>
    </main>
    <%-include('./partials/scripts')%>
  </body>
</html>
