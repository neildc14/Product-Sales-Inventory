<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/head')%>
  <body>
    <main>
      <div class="container-fluid mx-0 px-0">
        <%-include('./partials/nav')%>
        <div class="container sub_container">
          <button
            onclick="window.history.back()"
            class="btn border border-2 border-light d-flex align-items-center back_button"
          >
            <span class="material-symbols-outlined me-2"> arrow_back_ios </span>
            <span>Go Back</span>
          </button>
          <div class="my-4" style="max-width: 498px; margin: 0 auto">
            <h5>Add Weekly Sales</h5>
            <form action="" method="POST">
              <div class="form-group">
                <label for="date_start">From:</label>
                <input
                  type="date"
                  name="date_start"
                  id="date_start"
                  class="form-control"
                />
              </div>
              <div class="form-group mt-3">
                <label for="date_end">To:</label>
                <input
                  type="date"
                  name="date_end"
                  id="date_end"
                  class="form-control"
                />
              </div>
              <div class="d-flex align-items-center mt-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <button type="reset" class="btn ms-2 bg-light">Reset</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
    <%-include('./partials/scripts')%>
  </body>
</html>
