<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/head')%>
  <body>
    <main>
      <div class="container-fluid mx-0 px-0">
        <%-include('./partials/nav')%>
        <div class="container">
          <div class="mt-5">
            <h5 class="bg-primary text-white p-1">
              <span>Name: </span><%=customer.customer_name%>
            </h5>
          </div>

          <section>
            <table class="table border">
              <tbody>
                <tr>
                  <th scope="row">Address</th>
                  <td><%=customer.address%></td>
                </tr>
                <tr>
                  <th scope="row">Product Ordered</th>
                  <td><%=product.product_name%></td>
                </tr>
                <tr>
                  <th scope="row">Quantity</th>
                  <td><%=customer.quantity_ordered%></td>
                </tr>
                <tr>
                  <th scope="row" class="table-active">Total Purchased</th>
                  <td class="table-active"><%=customer.total_purchased%></td>
                </tr>
              </tbody>
            </table>
          </section>
          <section>
            <hr />
            <div>
              <div
                class="alert alert-danger d-flex align-items-center"
                role="alert"
              >
                <span class="material-symbols-outlined me-2"> warning </span
                ><span
                  >Are you sure that you want to delete this customer?</span
                >
              </div>

              <button
                type="submit"
                class="btn btn-danger customerData"
                data-id="<%=customer._id%>"
              >
                Delete
              </button>
            </div>
          </section>
        </div>
      </div>
    </main>

    <%-include('./partials/scripts')%>
  </body>
</html>
