<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/head')%>
  <body>
    <main>
      <div class="weekly_product_sales_container container-fluid mx-0 px-0">
        <%-include('./partials/nav')%>
        <div class="container mt-5" style="position: relative !important">
          <nav class="top_nav d-flex bg-gradient" id="weekly_product_top_nav">
            <li class="my-0 text-white d-flex align-items-center">
              <a href="#products_container" class="text-white">Products</a>
              <span class="ms-1"> |</span>
            </li>
            <li class="my-0 ms-4 text-white d-flex align-items-center">
              <a href="#expenses_container" class="text-white">Expenses</a>
              <span class="ms-1"> |</span>
            </li>
            <li class="my-0 ms-4 text-white d-flex align-items-center">
              <a href="#audit_container" class="text-white">Audit</a>
              <span class="ms-1"> |</span>
            </li>
          </nav>
          <div class="border border-2">
            <h6 class="d-flex align-items-center m-0 p-2">
              <span class="pe-2">Week:</span>
              <%=weekly_product_sales.date_start_formatted%>-<%=weekly_product_sales.date_end_formatted
              %>
            </h6>
          </div>
          <div class="my-4">
            <a
              href="/weekly_products/add_product"
              class="btn btn-sm btn-secondary"
              data-bs-toggle="modal"
              data-bs-target="#productModal"
              >Add Product</a
            >
            <a
              href="/weekly_products/add_expenses"
              class="btn btn-sm btn-secondary ms-2"
              >Add Expenses</a
            >
            <hr />
          </div>
          <h5 class="bg-primary text-white p-1">Products</h5>
          <section class="products_container" id="products_container">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Product</th>
                  <th scope="col" class="px-0">Orders</th>
                  <th scope="col"></th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                <%products.forEach((product)=>{ %>

                <tr>
                  <td class="td_description"><%=product.product_name%></td>
                  <td class="px-0">10</td>
                  <td>
                    <a href="<%=product.url%>" class="btn btn-sm btn-success"
                      >View Product</a
                    >
                  </td>

                  <td class="px-0">
                    <form action="">
                      <input type="hidden" name="" />
                      <button
                        type="submit"
                        class="btn m-0 btn-sm d-flex align-items-center"
                      >
                        <span class="material-symbols-outlined"> delete </span>
                      </button>
                    </form>
                  </td>
                </tr>

                <%})%>
              </tbody>
            </table>
          </section>
          <div class="my-4">
            <h5 class="bg-primary text-white p-1">Expenses</h5>
            <section class="products_container" id="expenses_container">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Type</th>
                    <th scope="col">Amount</th>
                  </tr>
                </thead>
                <tbody>
                  <%miscellaneous.forEach((misc)=>{ %>

                  <tr>
                    <td><%=misc.misc_name%></td>
                    <td style="width: 35%"><%=misc.amount%></td>
                  </tr>

                  <%})%>
                </tbody>
              </table>
            </section>
          </div>
          <div class="my-4">
            <h5 class="bg-dark text-white p-1">Audit</h5>
            <section id="audit_container"></section>
          </div>
          <!-- ProductModal -->
          <div
            class="modal fade"
            id="productModal"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Add Product
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <form action="" method="POST">
                  <div class="modal-body">
                    <div class="form-group pb-2">
                      <input
                        type="hidden"
                        name="weekly_product"
                        id="weekly_product"
                        value="<%=weekly_product_sales._id%>"
                      />
                    </div>
                    <div class="form-group pb-2">
                      <label for="product_name" class="pb-1"
                        >Product Name:</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        name="product_name"
                        id="product_name"
                        required="true"
                        autocomplete="off"
                      />
                    </div>
                    <div class="form-group pb-2">
                      <label for="quantity" class="pb-1"
                        >Quantity(if limited):</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        name="quantity"
                        id="quantity"
                        required="true"
                        autocomplete="off"
                      />
                    </div>
                    <div class="form-group pb-2">
                      <label for="quantity" class="pb-1">Original Price:</label>
                      <input
                        type="text"
                        class="form-control"
                        name="original_price"
                        id="original_price"
                        autocomplete="off"
                      />
                    </div>
                    <div class="form-group pb-2">
                      <label for="quantity" class="pb-1"> Selling Price:</label>
                      <input
                        type="text"
                        class="form-control"
                        name="selling_price"
                        id="selling_price"
                        required="true"
                        autocomplete="off"
                      />
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="reset" class="btn">Reset</button>
                    <button type="submit" class="btn btn-primary">
                      Save Product
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>

