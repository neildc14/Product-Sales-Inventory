<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/head')%>
  <body>
    <main>
      <div class="container-fluid mx-0 px-0">
        <%-include('./partials/nav')%>
        <div class="container mt-5">
          <div class="border border-2">
            <h6 class="d-flex align-items-center m-0 p-2">
              <span class="pe-2">Week:</span>
              <%=weekly_products.date_start_formatted%>-<%=weekly_products.date_end_formatted
              %>
            </h6>
          </div>
          <div class="my-4">
            <a
              href="/weekly_products/add-product"
              class="btn btn-sm btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#exampleModal"
              >Add Product</a
            >
            <hr />
          </div>
          <!-- Modal -->
          <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Add Product
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <form action="/weekly_products" method="POST">
                  <div class="modal-body">
                    <div class="form-group pb-2">
                      <label for="product_name" class="pb-1"
                        >Product Name:</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        name="product_name"
                        id="product_name"
                        required="true"
                        autocomplete="off"
                      />
                    </div>
                    <div class="form-group pb-2">
                      <label for="quantity" class="pb-1">Quantity:</label>
                      <input
                        type="text"
                        class="form-control"
                        name="quantity"
                        id="quantity"
                        required="true"
                        autocomplete="off"
                      />
                    </div>
                    <div class="form-group pb-2">
                      <label for="quantity" class="pb-1">Original Price:</label>
                      <input
                        type="text"
                        class="form-control"
                        name="original_price"
                        id="original_price"
                        required="true"
                        autocomplete="off"
                      />
                    </div>
                    <div class="form-group pb-2">
                      <label for="quantity" class="pb-1"> Selling Price:</label>
                      <input
                        type="text"
                        class="form-control"
                        name="selling_price"
                        id="selling_price"
                        required="true"
                        autocomplete="off"
                      />
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="reset" class="btn">Reset</button>
                    <button type="submit" class="btn btn-primary">
                      Save Product
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <%if(errors) {%> <%errors.forEach((err)=>{%>
          <p><%=err%></p>
          <%})%> <%}%>
        </div>
      </div>
    </main>
    <%-include('./partials/scripts')%>
  </body>
</html>
